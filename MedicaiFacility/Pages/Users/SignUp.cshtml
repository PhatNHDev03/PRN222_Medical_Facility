@page
@model MedicaiFacility.RazorPage.Pages.Users.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}
@if (TempData["Error"]!=null)
{
    <p class="text-danger">@TempData["Error"]</p>

}
<h2>Sign Up</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Input.FullName">Full Name</label>
        <input asp-for="Input.FullName" class="form-control" required />
        <span asp-validation-for="Input.FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" class="form-control" type="email" required />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" class="form-control" type="password" required />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.RePassword">Confirm Password</label>
        <input asp-for="Input.RePassword" class="form-control" type="password" required />
        <span asp-validation-for="Input.RePassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.PhoneNumber">Phone Number</label>
        <input asp-for="Input.PhoneNumber" class="form-control" required />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.BankAccount">BankAccount</label>
        <input asp-for="Input.BankAccount" class="form-control" required />
        <span asp-validation-for="Input.BankAccount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.UserType">User Type</label>
        <select asp-for="Input.UserType" asp-items="Model.UserTypeOptions" class="form-control" required>
            <option value="">Select User Type</option>
        </select>
        <span asp-validation-for="Input.UserType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
<div asp-validation-summary="All" class="text-danger"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}