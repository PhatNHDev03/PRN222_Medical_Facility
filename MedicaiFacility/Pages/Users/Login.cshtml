@page
@model MedicaiFacility.RazorPage.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Input.Identifier">Email or Phone Number</label>
        <input asp-for="Input.Identifier" class="form-control" required />
        <span asp-validation-for="Input.Identifier" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" class="form-control" type="password" required />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
<div asp-validation-summary="All" class="text-danger"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}