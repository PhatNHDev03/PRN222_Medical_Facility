@page
@model MedicaiFacility.RazorPage.Pages.MedicalHistories.CreateModel
@{
}
<h2>Create Medical History</h2>

<div class="container">
    <form asp-page="/MedicalHistories/Create" method="post">
        <div class="mb-3">
            <label class="form-label">Appointment ID</label>
            <input type="number" class="form-control" asp-for="MedicalHistory.AppointmentId" placeholder="Enter Appointment ID" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" asp-for="MedicalHistory.Description" placeholder="Enter Description" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <select class="form-control" asp-for="MedicalHistory.Status">
                <option value="Pending">Pending</option>
                <option value="Completed">Completed</option>
                <option value="Incompltete">Incompltete</option>
                <option value="Cancel">Cancel</option>
            </select>
        </div>

        



        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/MedicalHistory/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>