@page
@model MedicaiFacility.RazorPage.Pages.Appointments.MyAppointmentsModel
@{
}
<h2>Appointments</h2>
<form asp-page="/Appointments/Create" method="get">
    <button class="btn btn-sm btn-primary m-2">Add New Appointment</button>
</form>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Patient Name</th>
            <th>Expert Name</th>
            <th>Facility Name</th>
            <th>Address</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>PaymentMethod</th>
            <th>Amount</th>
            <th>Transaction Status</th>
            <th>Appointment Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.AppointmentViewModels)
        {
            <tr>
                <td>@appointment.AppointmentId</td>
                <td>@(appointment.PatientName ?? "Unknown")</td>
                <td>@(appointment.ExpertName ?? "Unknown")</td>
                <td>@(appointment.FacilityName ?? "N/A")</td>
                <td>@(appointment.Address ?? "N/A")</td>
                <td>@appointment.StartDate.ToString()</td>
                <td>@appointment.EndDate.ToString()</td>
                <td>@(appointment.PaymentMethod ?? "N/A")</td>
                <td>@appointment.Amount.ToString("C")</td>
                <td>@appointment.TransactionStatus</td>
                <td>@appointment.Status</td>
                <td>
                    <button class="btn btn-primary" onclick="window.location.href='@Url.Page("/Appointments/Detail", new { id = appointment.AppointmentId })'">Detail</button>
                    @if ((appointment.Status == "Pending"))
                    {
                        <button class="btn btn-danger" onclick="openModal(event, @appointment.AppointmentId, @appointment.PatientId)">Cancel</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Bootstrap -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Cancellation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this appointment?</p>
                <p>If you <strong>cancel this appointment</strong>. Your booking is only 50% refundable. And you must book another appointment if you want to book this health examination again</p>
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="CancelMyAppointment">
                    <input type="hidden" name="id" id="deleteAppointmentId" />
                    <input type="hidden" name="pId" id="patientId" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    function openModal(event, appointmentId, patientId) {
        event.preventDefault(); // Ngăn chặn hành vi mặc định của nút

        // Gán giá trị vào input hidden
        document.getElementById("deleteAppointmentId").value = appointmentId;
        document.getElementById("patientId").value = patientId;

        // Hiển thị modal bằng Bootstrap
        var myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        myModal.show();
    }
</script>

@if (Model.Pager.TotalPages > 0)
{
    <ul class="pagination justify-content-end">
        @if (Model.Pager.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-page="/Appointments/MyAppointments" asp-route-pg="@(Model.Pager.StartPage)" asp-route-patientId="@(Model.PatientId)">First</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-page="/Appointments/MyAppointments" asp-route-pg="@(Model.Pager.CurrentPage-1)" asp-route-patientId="@(Model.PatientId)">Previous</a>
            </li>
        }
        @for (var pge = Model.Pager.StartPage; pge <= Model.Pager.EndPage; pge++)
        {
            <li class="page-item @(pge == Model.Pager.CurrentPage ? "active" : "")">
                <a class="page-link" asp-page="/Appointments/MyAppointments" asp-route-pg="@pge" asp-route-patientId="@(Model.PatientId)">@pge</a>
            </li>
        }
        @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-page="/Appointments/MyAppointments" asp-route-pg="@(Model.Pager.CurrentPage+1)" asp-route-patientId="@(Model.PatientId)">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-page="/Appointments/MyAppointments" asp-route-pg="@(Model.Pager.TotalPages)" asp-route-patientId="@(Model.PatientId)">Last</a>
            </li>
        }
    </ul>
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

