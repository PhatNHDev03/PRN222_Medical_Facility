@page
@model MedicaiFacility.RazorPage.Pages.Departments.EditModel
@{
    ViewData["Title"] = "Edit Department";
    Layout = null;
}

<h2 class="text-center my-4">Edit Department</h2>

<form method="post" asp-page="Edit" class="p-4 border rounded shadow-sm bg-light">
    <input type="hidden" asp-for="Department.DepartmentId" />

    <div class="mb-3">
        <label asp-for="Department.DepartmentName" class="form-label">Department Name</label>
        <input asp-for="Department.DepartmentName" type="text" class="form-control" required />
        <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Department.Description" class="form-label">Description</label>
        <textarea asp-for="Department.Description" type="text" class="form-control" required></textarea>
        <span asp-validation-for="Department.Description" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-secondary px-4" onclick="closeModal()">Cancel</button>
        <button type="submit" class="btn btn-success px-4">Save</button>
    </div>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center mt-3">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center mt-3">@TempData["SuccessMessage"]</div>
}

<script>
    function closeModal() {
        window.history.back();
    }
</script>