@page
@model MedicaiFacility.RazorPage.Pages.MedicalExperts.CreateModel
@{
    ViewData["Title"] = "Create Medical Expert";
}

<h2>Create Medical Expert</h2>

<div class="container">
    <form method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Input.Specialization" class="control-label col-md-2">Specialization</label>
            <div class="col-md-10">
                <input asp-for="Input.Specialization" class="form-control" />
                <span asp-validation-for="Input.Specialization" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.ExperienceYears" class="control-label col-md-2">Experience Years</label>
            <div class="col-md-10">
                <input asp-for="Input.ExperienceYears" type="number" class="form-control" min="0" />
                <span asp-validation-for="Input.ExperienceYears" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Department" class="control-label col-md-2">Department</label>
            <div class="col-md-10">
                <select asp-for="Input.Department" class="form-control" asp-items="@Model.DepartmentList">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="Input.Department" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.PriceBooking" class="control-label col-md-2">Price Booking</label>
            <div class="col-md-10">
                <input asp-for="Input.PriceBooking" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Input.PriceBooking" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.FacilityId" class="control-label col-md-2">Facility</label>
            <div class="col-md-10">
                <select asp-for="Input.FacilityId" class="form-control" asp-items="@Model.FacilityList">
                    <option value="">-- Select Facility --</option>
                </select>
                <span asp-validation-for="Input.FacilityId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Schedule (Select Days)</label>
            <div class="col-md-10">
                @if (Model.AvailableDays != null && Model.AvailableDays.Any())
                {
                    @foreach (var day in Model.AvailableDays)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="Input.SelectedDays" value="@day" class="form-check-input" />
                            <label class="form-check-label">@day</label>
                        </div>
                    }
                    <!-- Hidden input để hỗ trợ binding mảng -->
                    <input type="hidden" name="Input.SelectedDays" value="" />
                }
                else
                {
                    <p class="text-danger">No available days found.</p>
                }
                <span asp-validation-for="Input.SelectedDays" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="/MedicalExperts/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="../Shared/_ValidationScriptsPartial" />
}