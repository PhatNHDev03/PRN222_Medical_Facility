@page
@model MedicaiFacility.RazorPage.Pages.MedicalExperts.CreateModel
@{
    ViewData["Title"] = "Create Medical Expert";
}

<h2>Create Medical Expert Profile</h2>

<div class="container">
    <form method="post" class="form-horizontal">
        <input asp-for="UserId" hidden="hidden" class="form-control" />

        <div class="form-group">
            <label asp-for="MedicalExpert.Specialization" class="control-label col-md-2">Department</label>
            <div class="col-md-10">
                <select asp-for="MedicalExpert.Specialization" class="form-control" asp-items="@Model.Specialization">
                    <option value="">-- Select Specialization --</option>
                </select>
                <span asp-validation-for="MedicalExpert.Specialization" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicalExpert.ExperienceYears" class="control-label col-md-2">Experience Years</label>
            <div class="col-md-10">
                <input asp-for="MedicalExpert.ExperienceYears" type="number" class="form-control" min="0" />
                <span asp-validation-for="MedicalExpert.ExperienceYears" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicalExpert.StartHour" class="control-label col-md-2">Start Hour</label>
            <div class="col-md-10">
                <input asp-for="MedicalExpert.StartHour" type="text" class="form-control"  />
                <span asp-validation-for="MedicalExpert.StartHour" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicalExpert.EndHour" class="control-label col-md-2">End Hour</label>
            <div class="col-md-10">
                <input asp-for="MedicalExpert.EndHour" type="text" class="form-control"/>
                <span asp-validation-for="MedicalExpert.EndHour" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicalExpert.Department" class="control-label col-md-2">Department</label>
            <div class="col-md-10">
                <select asp-for="MedicalExpert.Department" class="form-control"  asp-items="@Model.DepartmentList">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="MedicalExpert.Department" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicalExpert.PriceBooking" class="control-label col-md-2">Price Booking</label>
            <div class="col-md-10">
                <input asp-for="MedicalExpert.PriceBooking" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="MedicalExpert.PriceBooking" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicalExpert.FacilityId" class="control-label col-md-2">Facility</label>
            <div class="col-md-10">
                <select asp-for="MedicalExpert.FacilityId" class="form-control" asp-items="@Model.FacilityList">
                    <option value="">-- Select Facility --</option>
                </select>
                <span asp-validation-for="MedicalExpert.FacilityId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Schedule (Select Days)</label>
            <div class="col-md-10">
                @if (Model.AvailableDays != null && Model.AvailableDays.Any())
                {
                    @foreach (var day in Model.AvailableDays)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="Input.SelectedDays" value="@day" class="form-check-input" />
                            <label class="form-check-label">@day</label>
                        </div>
                    }
                    <!-- Hidden input để hỗ trợ binding mảng -->
                    <input type="hidden" name="Input.SelectedDays" value="" />
                }
                else
                {
                    <p class="text-danger">No available days found.</p>
}
                <span asp-validation-for="Input.SelectedDays" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="/MedicalExperts/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="../Shared/_ValidationScriptsPartial" />
}