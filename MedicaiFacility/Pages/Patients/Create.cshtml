@page
@model MedicaiFacility.RazorPage.Pages.Patients.CreateModel
@{
    ViewData["Title"] = "Create Patient";
}

<h2>Create Patient</h2>

<div class="container">
    <form method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Input.DateOfBirth" class="control-label col-md-2">Date of Birth</label>
            <div class="col-md-10">
                <input asp-for="Input.DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Gender" class="control-label col-md-2">Gender</label>
            <div class="col-md-10">
                <select asp-for="Input.Gender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.MedicalHistory" class="control-label col-md-2">Medical History</label>
            <div class="col-md-10">
                <input asp-for="Input.MedicalHistory" class="form-control" />
                <span asp-validation-for="Input.MedicalHistory" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="/Patients/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="../Shared/_ValidationScriptsPartial" />
}